# --- General Configuration ---
# LLM Provider: openai (default), local, lm_studio, or anthropic
LLM_PROVIDER=openai

# --- OpenAI Configuration ---
# Required if LLM_PROVIDER is 'openai' or for Embeddings (Knowledge Base)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo

# --- Local LLM Configuration (e.g. LM Studio) ---
# Used if LLM_PROVIDER is 'local'
LOCAL_LLM_BASE_URL=http://localhost:1234/v1
LOCAL_LLM_API_KEY=lm-studio
LOCAL_LLM_MODEL=local-model

# --- Anthropic Configuration ---
# Used if LLM_PROVIDER is 'anthropic'
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-opus-20240229

# --- Redmine Integration ---
REDMINE_URL=https://redmine.example.com
REDMINE_API_KEY=your_redmine_api_key

# --- Langfuse Tracing ---
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com
